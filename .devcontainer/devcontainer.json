{
	"name": "Hack Club Theme for Mkdocs - Dev Container",
	"build": {
		"dockerfile": "Dockerfile"
	},

	// ðŸ‘‡ Features to add to the Dev Container. More info: https://containers.dev/implementors/features.
	// "features": {},

	// ðŸ‘‡ Use 'forwardPorts' to make a list of ports inside the container available locally.
	//"forwardPorts": [],

	// ðŸ‘‡ Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "poetry install --no-root && pipenv install .",
	"postAttachCommand": "pipenv run dev",

	// ðŸ‘‡ Configure tool-specific properties.
	"customizations": {
    "vscode": {
        "settings": {
          "git.alwaysSignOff": true,
          "git.confirmSync": false,
          "conventionalCommits.scopes": [
            "templates",
            "plugins",
            "docs",
            "github-actions",
            "gitlab-ci",
            "poetry"
          ]
        },
        "extensions": [
          "ms-python.python",
          "yahyabatulu.vscode-markdown-alert",
          "bierner.markdown-emoji",
          "bierner.markdown-checkbox",
          "bierner.markdown-preview-github-styles",
          "bierner.markdown-mermaid",
          "bierner.markdown-footnotes",
          "bierner.markdown-yaml-preamble",
          "vivaxy.vscode-conventional-commits",
          "github.vscode-github-actions"
        ]
      }
		},
		"features": {
			"ghcr.io/devcontainers/features/docker-in-docker:2": {
				"azureDnsAutoDetection": true,
				"installDockerBuildx": true,
				"installDockerComposeSwitch": true,
				"version": "latest",
				"dockerDashComposeVersion": "latest"
			},
			"ghcr.io/devcontainers/features/github-cli:1": {
				"installDirectlyFromGitHubRelease": true,
				"version": "latest"
			},
			"ghcr.io/joshuanianji/devcontainer-features/github-cli-persistence:1": {},
			"ghcr.io/itsmechlark/features/doppler:2": {
				"version": "latest"
			},
			"ghcr.io/devcontainers-extra/features/pipenv:2": {
				"version": "latest"
			}
		}

	// ðŸ‘‡ Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
